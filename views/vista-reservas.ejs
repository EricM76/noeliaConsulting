<!DOCTYPE html>
<html lang="es">

<!-- Head -->
<%- include('partials/head') %>
<body id= "ServiciosProductos">
    <%- include('partials/header') %>

      <main>
        <div class="container mt-5">
          <h2 class="text-center mt-5"></h2>
          <div class="shadow mb-5 mt-5 bg-white rounded text-center">
            <h4 id="abm">Nuestros Servicios</h4>
          </div>
        </div>
        <div class="container mt-5">  
          <div class="row">
            <% services.forEach(service=> { %>
              <div class="col-12 col-md-6 col-lg-6 mt-3">

                  <div class="card h-100">
 
                      <div class="row no-gutters">

                        <div class="col-md-4">
                          <img src="/images/img-services/<%= service.img %>" class="img-fluid" alt="...">
                        </div>

                        <div class="col-md-8">
                          <div class="card-body">
                            <h5 class="card-title">
                              <%= service.title %>
                            </h5>
                            <p class="card-text">
                              <%= service.description %>
                            </p>
<!-- Principio del widget de enlace de Calendly -->
<link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
<script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>
<a class="btn btn-primary  href="" onclick="Calendly.initPopupWidget({url: 'https://calendly.com/mibellezademujer/manos-spa'});return false;">Reservar</a>
<!-- Final del widget de enlace de Calendly -->
                
                          </div>
                        </div>
                      </div>

                    
                  </div>
                </div>
               
              <% }) %>

            
          </div>
        </div>
      </main>

      <%- include('partials/footer') %>
  </body>