<!DOCTYPE html>
<html lang="es">

<!-- Head -->
<%- include('partials/head') %>
<body id="loginViewGral">
    <%- include('partials/header') %>

  
    <div class="container">
        <h2 class="text-center mt-5">Iniciar Sesión</h2>
        <div class="row justify-content-center mt-5">
            <div class="card mb-3" style="max-width: 60%;">
                <div class="row no-gutters">
                  <div class="col-md-4">
                    <img src="/images/face-b.jpeg" class="card-img" alt="...">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                        <form action="/users/login" method="POST">
                            <div class="form-group">
                              <label for="exampleInputEmail1">Correo electrónico</label>
                              <input type="email" class="form-control" aria-describedby="emailHelp" name="email" value="<%= typeof old != 'undefined' && old.email ? old.email.msj : null  %> ">
                              <span class="text-danger"><%= (typeof errors != 'undefined' && errors.email) ? errors.email.msg : "" %></span>
                            </div>
                            <div class="form-group">
                              <label for="exampleInputPassword1">Contraseña</label>
                              <input type="password" class="form-control" name="password">
                              <span class="text-danger"><%= (typeof errors != 'undefined' && errors.password) ? errors.password.msg : "" %></span>

                            </div>
                            <div>
                              <span class="text-danger"><%= (typeof errors != 'undefined' && errors.invalid) ? errors.password.msg : "" %></span>
                            </div>  
                            <div class="form-group form-check">
                              <input type="checkbox" class="form-check-input" id="exampleCheck1" name="remember">
                              <label class="form-check-label" for="exampleCheck1">Recordarme</label>
                            </div>
                            <button type="submit" class="btn btn-primary">Ingresar</button>
                            <p class="mt-3">¿No tenés cuenta? <a href="/users/register">Registrate</a></p>
                          </form>
                    </div>
                  </div>
                </div>
            </div>

        </div>
    </div>

    <%- include('partials/footer') %>
    
</body>    
</html>     