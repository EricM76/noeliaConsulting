<!DOCTYPE html>
<html lang="es">

<!-- Head -->
<%- include('./partials/head') %>

<body>
    <%- include('./partials/header') %>

            <div class="container mb-5">
                <div class="shadow mb-5 mt-5 bg-dark rounded text-center">
                    <h4 id="abm">Panel de Control</h4>
                </div>

                <form action="/admin/products/new-product" method="POST" enctype="multipart/form-data">
                    <div class="row justify-content-center box-form">
                        <div class="col-12 col-md-6 col-lg-5">
                            <div class="abm">
                                <label class="form-label" for="nombre">Título:</label>
                                <input type="text" class="form-control mb-3" name="title" id="title" placeholder="">

                                <label for="valor">Valor:</label>
                                <input type="number" class="form-control mb-3" name="price" id="valor">

                                <label for="">Marca:</label>
                                <input type="text" class="form-control mb-3" name="brand">

                                <label for="">Categoría:</label>
                                <input type="text" class="form-control mb-3" name="category">

                                <label for="" class="form-label">Descripción:</label>
                                <textarea class="form-control" id="textarea1" rows="5"
                                        name="description"></textarea>
                            </div>
                        </div>

                        <div class="col-12 col-md-5 col-lg-4">
                            <div class="">
                                <img src="/images/face-b-02.jpg" class="img-fluid shadow mb-4 bg-white rounded"
                                        alt="foto">
                            </div>
                            <label for="" class="">Imagen:</label>
                            <input type="file" class="form-control" name="img">
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <button type="submit" class="btn btn-success mt-4">Guardar Cambios</button>
                    </div>
                </form>
            </div>
            
</body>

</html>